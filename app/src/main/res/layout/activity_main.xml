<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.jzheadley.androidvideosearch.MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textColor="#4dd7f9"
        android:textStyle="bold"
        android:layout_marginBottom="-20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_below="@+id/app_title"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/nontransparentlargelogo"/>


    <Button
        android:drawableLeft="@drawable/ic_videocam"
        android:drawableStart="@drawable/ic_videocam"
        android:id="@+id/record_btn"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp"
        android:paddingLeft="15dp"
        android:layout_width="300dp"
        android:background="@xml/button"
        android:text="@string/record_button"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40sp" />

    <Button
        android:drawableLeft="@drawable/ic_panorama"
        android:drawableStart="@drawable/ic_panorama"
        android:id="@+id/galleryButton"
        android:layout_below="@+id/record_btn"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="17dp"
        android:layout_width="300dp"
        android:background="@xml/button"
        android:text="@string/gallery_button"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40sp" />

    <Button
        android:id="@+id/PaulsButton"
        android:layout_below="@+id/galleryButton"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/pauls_button"
        android:textSize="0sp" />

</RelativeLayout>

